{
  "name": "perpetuity",
  "version": "0.1.0",
  "description": "A lightweight library for building rich, interactive terminal user interfaces",
  "keywords": [
    "cli",
    "command-line interface",
    "terminal",
    "terminal ui",
    "tui",
    "user interface"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thegedge/perpetuity.git"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**/*.{d.ts,js}",
    "LICENSE",
    "package.json",
    "README.md",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "lint": "npm run lint:prettier",
    "lint:prettier": "./scripts/prettier-with-diff",
    "prepublishOnly": "tsc",
    "tc": "tsc --noEmit",
    "test": "vitest run --dir test --passWithNoTests",
    "test:watch": "vitest --dir test --passWithNoTests",
    "update": "ncu --interactive",
    "watch": "tsc --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^24.10.0",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  }
}
